<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
	version="5.0">
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file></welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>EmployeeServlet</servlet-name>
		<servlet-class>com.ideas2it.employeemanagement.controller.EmployeeController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ProjectServlet</servlet-name>
		<servlet-class>com.ideas2it.employeemanagement.controller.ProjectController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/createEmployee</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/createEmployeeForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/updateEmployeeForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/updateEmployee</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/viewAllEmployees</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/deleteEmployee</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/deleteAllEmployees</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/assignProjectsForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/assignProjects</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/unAssignProjectsForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/unAssignProjects</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/createProject</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/createProjectForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/viewAllProjects</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/updateProject</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/updateProjectForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/deleteProject</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/deleteAllProjects</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/assignEmployeesForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/assignEmployees</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/unAssignEmployeesForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/unAssignEmployees</url-pattern>
	</servlet-mapping>
	
	<error-page>
  		<exception-type>java.lang.Throwable</exception-type>
  		<location>/Error.jsp</location>
	</error-page>

</web-app>
