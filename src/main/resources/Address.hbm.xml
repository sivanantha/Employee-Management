<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ideas2it.employeemanagement.model">
    
    <class name="Address" table="address">
        
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        
        <property name="doorNumber" column="door_number" type="string" 
                  length="8" not-null="true"/>
        
        <property name="street" column="street" type="string" 
                  length="60" not-null="true"/>
        
        <property name="locality" column="locality" type="string"
                  length="130" not-null="true"/>
        
        <property name="city" column="city" type="string"
                  length="130" not-null="true"/>
        
        <property name="state" column="state" type="string"
                  length="130" not-null="true"/>
                  
        <property name="country" column="country" type="string"
                  length="130" not-null="true"/>
                  
        <property name="pinCode" column="pin_code" type="string"
                  length="10" not-null="true"/>
        
       <many-to-one name="employee" column="employee_id" class="Employee" 
                    insert="false" update="false"  not-null="true"/>
        
    </class>

</hibernate-mapping>
