<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ideas2it.employeemanagement.model">
    
    <class name="Employee" table="employee">
        
        <id name="id" type="int" column="id">
            <generator class="native">
            </generator>
        </id>
        
        <property name="name" column="name" type="string" lazy="true" 
                  length="60" not-null="true"/>
        
        <property name="gender" column="gender" type="string" lazy="true" 
                  not-null="true"/>
        
        <property name="dateOfBirth" column="date_of_birth" type="LocalDate"
                  lazy="true" not-null="true"/>
        
        <property name="mobileNumber" column="mobile_number" type="long" 
                  lazy="true" not-null="true" unique="true"/>
        
        <property name="email" column="email" type="string" 
                  length="300" lazy="true" not-null="true" unique="true"/>
        
        <property name="salary" column="salary" type="float" 
                  precision="25" scale="2" lazy="true" not-null="true"/>
                  
        <property name="dateOfJoining" column="date_of_joining" type="LocalDate" 
                  lazy="true" not-null="true"/>
        
        <bag name="addresses" table="address" lazy="true" cascade="all">
            
            <key column="employee_id" not-null="true" on-delete="cascade"/>
            
            <one-to-many class="Address" />
        
        </bag>
        
        <set name="projects" table="project_employee" lazy="true">
            
            <key column="employee_id" not-null="true"/>
            
            <many-to-many column="project_id" class="Project"/>
        
        </set>
        
    </class>

</hibernate-mapping>
