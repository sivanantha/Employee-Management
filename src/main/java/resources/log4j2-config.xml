<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
    
        <RollingFile name="employee_management" FileName="logs/employee_management.log"
                     filePattern="logs/$${date:yyyy-MM}/%d{dd-MM-yyyy}-%i.log">
                     
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" 
                           header="\t\t\t\t\t\tEmployee Management System Logs\n\t\t\t\t\t\t===============================\n\n"/>
       
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="50MB"/>
            </Policies>
            
        </RollingFile>
        
    </Appenders>
    
    <Loggers>
    
        <Logger name="org.hibernate" level="info" additivity="false">
            <AppenderRef ref="employee_management"/>
        </Logger>
        
        <Root level="info">
            <AppenderRef ref="employee_management"/>
        </Root>
        
    </Loggers>
</Configuration>
